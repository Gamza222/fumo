# ============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env.local and update the values for your environment
# This file contains all possible environment variables with their default values

# ============================================================================
# CORE APPLICATION CONFIGURATION
# ============================================================================

# Node.js environment (development, production, test, preview)
NODE_ENV=development

# Server port
PORT=3000

# Application information
NEXT_PUBLIC_APP_NAME=Abstract Team
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_APP_ENV=development

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Main API URL
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# API base URL path
NEXT_PUBLIC_API_BASE_URL=/api

# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=10000

# Maximum API retry attempts
NEXT_PUBLIC_API_MAX_RETRIES=3

# GraphQL endpoint URL
NEXT_PUBLIC_GRAPHQL_ENDPOINT=/graphql

# WebSocket URL
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://example@sentry.io/123456

# Analytics ID for tracking
NEXT_PUBLIC_ANALYTICS_ID=dev-analytics-id

# Performance monitoring level (none, basic, full)
NEXT_PUBLIC_PERFORMANCE_MONITORING=basic

# Debug flags
NEXT_PUBLIC_DEBUG_PERFORMANCE=false
NEXT_PUBLIC_DEBUG_TOOLS=false
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_ANALYTICS=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m

# Refresh token configuration
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=7d

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=true
RATE_LIMIT_SKIP_FAILED=false

# CORS configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# BUILD & DEVELOPMENT
# ============================================================================

# Bundle analysis
ANALYZE=false
BUNDLE_ANALYZE=server
CUSTOM_KEY=customValue

# ============================================================================
# DATABASE
# ============================================================================

# Database connection URL
DATABASE_URL=postgresql://localhost:5432/abstract_team

# ============================================================================
# CI/CD CONFIGURATION (Phase 6)
# ============================================================================

# Vercel deployment
VERCEL_TOKEN=
VERCEL_PROJECT_ID=
VERCEL_ORG_ID=

# GitHub CI/CD
GITHUB_TOKEN=

# Security scanning
SNYK_TOKEN=

# Performance testing
LIGHTHOUSE_CI_TOKEN=

# ============================================================================
# DEPLOYMENT CONFIGURATION (Phase 6)
# ============================================================================

# Deployment URL
DEPLOYMENT_URL=

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================

# Jest worker ID (automatically set by Jest)
# JEST_WORKER_ID=

# Storybook environment (automatically set by Storybook)
# STORYBOOK=
