# ============================================================================
# PREVIEW ENVIRONMENT CONFIGURATION
# ============================================================================
# Environment variables for preview deployments (PR testing, staging)
# These values are optimized for preview with production-like settings but debug enabled

# ============================================================================
# CORE APPLICATION CONFIGURATION
# ============================================================================

NODE_ENV=production
PORT=3000

# Preview app information
NEXT_PUBLIC_APP_NAME=Abstract Team (Preview)
NEXT_PUBLIC_APP_VERSION=2.0.0-preview
NEXT_PUBLIC_APP_ENV=preview

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Preview API URLs (update with your actual preview URLs)
NEXT_PUBLIC_API_URL=https://preview-api.fumo.com/api
NEXT_PUBLIC_API_BASE_URL=/api
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_MAX_RETRIES=3
NEXT_PUBLIC_GRAPHQL_ENDPOINT=/graphql
NEXT_PUBLIC_WS_URL=wss://preview-api.fumo.com

# ============================================================================
# MONITORING & ANALYTICS (Preview)
# ============================================================================

# Preview Sentry DSN (use preview/staging Sentry project)
NEXT_PUBLIC_SENTRY_DSN=https://your-preview-sentry-dsn@sentry.io/preview-project-id

# Preview analytics (disabled to avoid polluting production data)
NEXT_PUBLIC_ANALYTICS_ID=preview-analytics-id
NEXT_PUBLIC_ANALYTICS=false

# Basic performance monitoring for preview
NEXT_PUBLIC_PERFORMANCE_MONITORING=basic

# Debug flags enabled for preview (useful for testing)
NEXT_PUBLIC_DEBUG_PERFORMANCE=false
NEXT_PUBLIC_DEBUG_TOOLS=false
NEXT_PUBLIC_DEBUG=true

# ============================================================================
# SECURITY CONFIGURATION (Preview)
# ============================================================================

# Preview JWT secrets (use different secrets from production)
JWT_SECRET=preview-jwt-secret-key-different-from-production
JWT_EXPIRES_IN=15m

REFRESH_TOKEN_SECRET=preview-refresh-token-secret-key-different-from-production
REFRESH_TOKEN_EXPIRES_IN=7d

# Preview rate limiting (slightly more relaxed than production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_SKIP_SUCCESS=true
RATE_LIMIT_SKIP_FAILED=false

# Preview CORS (allow preview domains)
NEXT_PUBLIC_APP_URL=https://preview.fumo.com
CORS_ORIGINS=https://preview.fumo.com,https://staging.fumo.com

# ============================================================================
# BUILD & DEVELOPMENT
# ============================================================================

# Disable bundle analysis in preview
ANALYZE=false
BUNDLE_ANALYZE=server
CUSTOM_KEY=preview-custom-value

# ============================================================================
# DATABASE (Preview)
# ============================================================================

# Preview database (use separate preview database)
DATABASE_URL=postgresql://username:password@preview-db-host:5432/abstract_team_preview

# ============================================================================
# CI/CD CONFIGURATION (Preview)
# ============================================================================

# Preview deployment tokens (same as production)
VERCEL_TOKEN=your-vercel-token-here
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id

GITHUB_TOKEN=your-github-token-here
SNYK_TOKEN=your-snyk-token-here
LIGHTHOUSE_CI_TOKEN=your-lighthouse-ci-token-here

# ============================================================================
# DEPLOYMENT CONFIGURATION (Preview)
# ============================================================================

# Preview deployment URL (will be set dynamically by Vercel)
DEPLOYMENT_URL=https://preview.fumo.com
