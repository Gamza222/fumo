# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Environment variables for production deployment
# These values are optimized for production with security and performance in mind

# ============================================================================
# CORE APPLICATION CONFIGURATION
# ============================================================================

NODE_ENV=production
PORT=3000

# Production app information
NEXT_PUBLIC_APP_NAME=Abstract Team
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_APP_ENV=production

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Production API URLs (update with your actual production URLs)
NEXT_PUBLIC_API_URL=https://api.fumo.com/api
NEXT_PUBLIC_API_BASE_URL=/api
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_MAX_RETRIES=3
NEXT_PUBLIC_GRAPHQL_ENDPOINT=/graphql
NEXT_PUBLIC_WS_URL=wss://api.fumo.com

# ============================================================================
# MONITORING & ANALYTICS (Production)
# ============================================================================

# Production Sentry DSN (REQUIRED - update with your actual Sentry DSN)
NEXT_PUBLIC_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id

# Production analytics (REQUIRED - update with your actual analytics ID)
NEXT_PUBLIC_ANALYTICS_ID=prod-analytics-id
NEXT_PUBLIC_ANALYTICS=true

# Basic performance monitoring for production
NEXT_PUBLIC_PERFORMANCE_MONITORING=basic

# Debug flags disabled for production
NEXT_PUBLIC_DEBUG_PERFORMANCE=false
NEXT_PUBLIC_DEBUG_TOOLS=false
NEXT_PUBLIC_DEBUG=false

# ============================================================================
# SECURITY CONFIGURATION (Production)
# ============================================================================

# Production JWT secrets (REQUIRED - use strong, unique secrets!)
JWT_SECRET=your-super-secure-production-jwt-secret-key-here
JWT_EXPIRES_IN=15m

REFRESH_TOKEN_SECRET=your-super-secure-production-refresh-token-secret-key-here
REFRESH_TOKEN_EXPIRES_IN=7d

# Production rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=true
RATE_LIMIT_SKIP_FAILED=false

# Production CORS (update with your actual production domains)
NEXT_PUBLIC_APP_URL=https://fumo.com
CORS_ORIGINS=https://fumo.com,https://www.fumo.com

# ============================================================================
# BUILD & DEVELOPMENT
# ============================================================================

# Disable bundle analysis in production
ANALYZE=false
BUNDLE_ANALYZE=server
CUSTOM_KEY=prod-custom-value

# ============================================================================
# DATABASE (Production)
# ============================================================================

# Production database (REQUIRED - update with your actual production database URL)
DATABASE_URL=postgresql://username:password@production-db-host:5432/abstract_team_prod

# ============================================================================
# CI/CD CONFIGURATION (Production)
# ============================================================================

# Production deployment tokens (REQUIRED for CI/CD)
VERCEL_TOKEN=your-vercel-token-here
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id

GITHUB_TOKEN=your-github-token-here
SNYK_TOKEN=your-snyk-token-here
LIGHTHOUSE_CI_TOKEN=your-lighthouse-ci-token-here

# ============================================================================
# DEPLOYMENT CONFIGURATION (Production)
# ============================================================================

# Production deployment URL
DEPLOYMENT_URL=https://fumo.com
